{
  "name": "n-project",
  "version": "1.0.0",
  "description": "node api",
  "main": "index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node dist/index.js ",
    "dev": "cross-env NODE_ENV=development ts-node dist/index.js",
    "build:ui": "rm -rf build && cd ../n-project && npm run build && cp -r build ../n-project",
    "deploy": "flyctl deploy",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",
    "logs:prod": "fly logs",
    "lint": "eslint .",
    "tsc": "tsc --watch",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --watchAll --no-cache --detectOpenHandles --forceExit"
  },
  "author": "samcesa",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "jest": "^29.2.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@types/morgan": "^1.9.3",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0"
  }
}
